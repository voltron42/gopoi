<!-- https://godoc.org/code.google.com/p/gofpdf#example-Fpdf--Tutorial03 -->
<document>
  <meta title="20000 Leagues Under the Seas" author="Jules Verne"/>
  <header>
    <page>
      <block>
        <setting x="88" line-width="1">
          <font family="Arial" bold="yes" size="15"/>
          <draw-color>
            <rgb red="0" green="80" blue="180"/>
          </draw-color>
          <fill-color>
            <rgb red="230" green="230" blue="0"/>
          </fill-color>
          <text-color>
            <rgb red="220" green="50" blue="50"/>
          </text-color>
        </setting>
        <object>
          <text break="nextline" fill="yes">
            <point x="34" y="9"/>
            <border>
              <all/>
            </border>
            <align horizontal="center">
            <body>Page <page-number/></body>
          </text>
        </object>
      </block>
      <line-break position="10"/>
    </page>
  </header>
  <footer>
    <page>
      <block>
        <setting y="-15">
          <font family="Arial" italic="yes" size="8"/>
          <text-color>
            <rgb red="200" green="220" blue="255"/>
          </text-color>
        </setting>
        <object>
          <text>
            <point x="0" y="6"/>
            <align horizontal="center">
            <body>Page <page-number/></body>
          </text>
        </object>
      </block>
    </page>
  </footer>
  <page>
    <block>
      <setting>
        <font family="Arial" size="12"/>
        <fill-color>
          <rgb red="200" green="220" blue="255"/>
        </fill-color>
      </setting>
      <object>
        <text fill="yes">
          <point x="0" y="6"/>
          <body>Chapter 1 : A RUNAWAY REEF</body>
        </text>
      </object>
    </block>
    <line-break position="4"/>
    <block>
      <setting>
        <font family="Times" size="12"/>
      </setting>
      <object>
        <point x="0" y="5"/>
        <body>[chapter text here]</body>
      </object>
    </block>
    <line-break position="-1"/>
    <block>
      <setting>
        <font italic="yes"/>
      </setting>
      <object>
        <text>
          <point x="0" y="5"/>
          <body>(end of excerpt)</body>
        </text>
      </object>
    </block>
  </page>
  <page>
    <block>
      <setting>
        <font family="Arial" size="12"/>
        <fill-color>
          <rgb red="200" green="220" blue="255"/>
        </fill-color>
      </setting>
      <object>
        <text fill="yes">
          <point x="0" y="6"/>
          <body>Chapter 2 : THE PROS AND CONS</body>
        </text>
      </object>
    </block>
    <line-break position="4"/>
    <block>
      <setting>
        <font family="Times" size="12"/>
      </setting>
      <object>
        <point x="0" y="5"/>
        <body>[chapter text here]</body>
      </object>
    </block>
    <line-break position="-1"/>
    <block>
      <setting>
        <font italic="yes"/>
      </setting>
      <object>
        <text>
          <point x="0" y="5"/>
          <body>(end of excerpt)</body>
        </text>
      </object>
    </block>
  </page>
</document>
